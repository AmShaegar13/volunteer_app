<%= form_for @ban do |f| %>
  <table border="1">
    <tr>
      <td><%= f.label :user, 'User' %></td>
      <td>
        <%= f.fields_for :user do |fu| %>
          <%= fu.collection_select(:id, User.all.order(id: :desc), :id, :name) %><br/>
          - OR -<br/>
          <%= fu.text_field :name %><br/>
        <% end -%>
      </td>
    </tr>
    <tr>
      <td>Ban in days</td><td><%= f.select :duration, [1, 3, 7, 14, [:perma, -1]] %></td>
    </tr>
    <tr>
      <td>Reason</td><td><%= f.text_field :reason %></td>
    </tr>
    <tr>
      <td>Forum link</td><td><%= f.text_field :link %></td>
    </tr>
    <tr>
      <td>Submit</td><td><%= f.submit 'Create' %></td>
    </tr>
  </table>
<% end -%>