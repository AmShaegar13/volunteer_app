<%= form_for @ban do |f| %>
  <%= f.fields_for :user do |fu| %>
    <%= fu.collection_select(:id, User.all.order(id: :desc), :id, :name) %><br/>
    - OR -<br/>
    <%= fu.text_field :name %><br/>
  <% end -%>
  <%= f.select :duration, [1, 3, 7, 14, [:perma, -1]] %><br/>
  <%= f.text_field :reason %><br/>
  <%= f.text_field :link %><br/>
  <%= f.submit 'Create' %><br/>
<% end -%>