<table border="1">
  <tr>
    <td>Summoner:</td><td><%= @user.name %></td>
  </tr>
  <tr>
    <td>Level:</td><td><%= @user.level %></td>
  </tr>
  <tr>
    <td>Total bans:</td><td><%= @user.bans.count %></td>
  </tr>
<% if @user.banned? -%>
  <tr>
    <td>Banned until:</td><td><%= @user.bans.last.ends %></td>
  </tr>
<% end -%>
</table>
<br/>
<%= render partial: 'bans/list' %>
<br/>
<%= form_for @blank_ban do |f| %>
  <%= f.fields_for @user do |fu| %>
    <%= fu.hidden_field :id %>
  <% end -%>
<table border="1">
  <%= render partial: 'bans/new', locals: { form: f } %>
</table>
<% end -%>