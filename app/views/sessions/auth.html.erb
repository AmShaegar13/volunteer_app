<%= form_tag :verify do %>
  <% login_carry = flash[:carry]['login'] if flash.key? 'carry' -%>
  <table>
    <tr>
      <td><%= label_tag 'auth[login]', 'Login' %></td><td><%= text_field_tag 'auth[login]', login_carry %></td>
    </tr>
    <tr>
      <td><%= label_tag 'auth[password]', 'Password' %></td><td><%= password_field_tag 'auth[password]' %></td>
    </tr>
    <tr>
      <td><%= label_tag 'Go' %></td><td><%= submit_tag 'Login' %></td>
    </tr>
  </table>
<% end %>